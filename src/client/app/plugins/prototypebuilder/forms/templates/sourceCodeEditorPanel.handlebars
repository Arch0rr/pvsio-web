<div id='pvsSpecification'>
	<div id="editorToolbar">
        <script>
            function highlight(el) {
                var c = document.getElementById(el);
                c.style.backgroundColor = "black";
                c.style.color = "white";
            }
            function resetStyle(el) {
                var c = document.getElementById(el);
                c.style.backgroundColor = "";
                c.style.color = "";
            }
        </script>        
		<button class="btn btn-primary"
                id="btnTypeCheck"
                onmouseover="highlight('btnTypeCheck')"
                onmouseout="resetStyle('btnTypeCheck')">Compile</button>
<!--
		<button class="btn" id="new_file">New File</button>
-->
		<button class="btn btn-default"
                id="btnImportFiles"
                onmouseover="highlight('btnImportFiles')"
                onmouseout="resetStyle('btnImportFiles')">Import Files</button>
		<button class="btn btn-default"
                id="btnSetMainFile"
                onmouseover="highlight('btnSetMainFile')"
                onmouseout="resetStyle('btnSetMainFile')"><i class="icon-star"></i> Set As Main File</button>
		<button class="btn btn-default"
                id="btnSaveFile"
                onmouseover="highlight('btnSaveFile')"
                onmouseout="resetStyle('btnSaveFile')">Save Selected File</button>
