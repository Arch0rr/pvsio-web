                id="btnSearchPrev"
                onmouseover="highlight('btnSearchPrev')"
                onmouseout="resetStyle('btnSearchPrev')"><span class="glyphicon glyphicon-arrow-left"></span></button>
        <button class="btn btn-default"
                id="btnSearchNext"
                style="padding:2px 4px 2px 4px; margin-top:4px;"
                onmouseover="highlight('btnSearchNext')"
                onmouseout="resetStyle('btnSearchNext')"><span class="glyphicon glyphicon-arrow-right"></span></button>
