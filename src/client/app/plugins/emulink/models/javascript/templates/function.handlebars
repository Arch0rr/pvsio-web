    //declaration of helper functions
    function enter(newStateLabel, state) {
        state.currentState = newStateLabel;
        return state;
    }

    function leave(currentStateLabel, state) {
        state.previousState = currentStateLabel;
        return state;
    }

    //function declarations
{{#each transitions}}
    function {{id}} (state) {
    {{~#if condition}}
        if ({{&condition}}) {
            state = leave('{{source.name}}', state);
            {{~#each actions}}
            state.{{&.}};
            {{/each}}
            state  = enter('{{target.name}}', state);
        }
    {{~else}}
        state = leave('{{source.name}}', state);
        {{~#each actions}}
        state.{{&.}};
        {{~/each}}
        state = enter('{{target.name}}', state);
    {{~/if}}
        return state;
    }
{{/each}}
