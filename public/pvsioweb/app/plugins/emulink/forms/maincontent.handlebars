<!-- container for overlay page with Start button -->
<div id="EmuchartLogo" class="Start">
    <span class="center">Load a saved diagram, or create a new empty diagram with the buttons below</span>
    <br/>
    <button class="btn btn-primary" id="btnLoadEmuchart"> Load Emuchart </button>
    <button class="btn btn-danger" id="btnNewEmuchart"> New Emuchart </button>    
</div>

<!-- container for graphical editor -->
<div id="graphicalEditor" class="hidden">
    <div id="EmuchartToolbar" >
        <ul class="dropdown dropdown-vertical">
            <li class='toolbar'>
                <hr>
                <a href="#!Browse diagram" class="toolbar-tooltip" id="btn_toolbarBrowse">
                    <span title="Browse diagram"
                          class="glyphicon glyphicon-arrow-right" 
                          style="font-size: 1.2em 
                                 -ms-transform:rotate(-120deg); /* IE 9 */
                                 -moz-transform:rotate(-120deg); /* Firefox */
                                 -webkit-transform:rotate(-120deg); /* Safari and Chrome */
                                 -o-transform:rotate(-120deg); /* Opera */
                                 padding-left: 1px;">
                    </span></a>
                <hr>
                <a href="#!Add states" class="toolbar-tooltip" id="btn_toolbarAddState">
                    <span title="Add states"
                          class="glyphicon glyphicon-stop" 
                          style="font-size: 1.2em
                                 transform: scale(1.4,1);
                                 -ms-transform: scale(1.4,1); /* IE 9 */
                                 -webkit-transform: scale(1.4,1); /* Safari and Chrome */
                                 -o-transform: scale(1.4,1); /* Opera */
                                 -moz-transform: scale(1.4,1); /* Firefox */">
                    </span></a>
                <a href="#!Add transitions" class="toolbar-tooltip" id="btn_toolbarAddTransition">
                    <span title="Add transitions"
                          class="glyphicon glyphicon-new-window" 
                          style="font-size: 1.2em">
                    </span></a>
                <a href="#!Rename states and transitions" class="toolbar-tooltip" id="btn_toolbarRename">
                    <span title="Rename states and transitions"
                          class="glyphicon glyphicon-font" 
                          style="font-size: 1.2em">
                    </span></a>                
                <hr>
            </li>
        </ul>
    </div>
	<div id="stateMachineMenu" >
		<ul class="dropdown dropdown-horizontal">
            <li class="vdivider"><a href='#!' class="toolbar-tooltip">&nbsp;</a>
            </li>
            <li class='active has-sub'><a href='#!'><span>EmuChart</span></a>
                <ul>
					<li class="divider"></li>
                    <li><a href='#!' id="btn_newChart"><span>New</span></a></li>
					<li><a href='#!' id="btn_openChart"><span>Open...</span></a></li>
					<li><a href='#!' id="btn_closeChart"><span>Close</span></a></li>
                    <li class="divider"></li>
                    <li><a href='#!' id="btn_saveChart"><span>Save</span></a></li>
                    <li><a href='#!' id="btn_saveChartAs"><span>Save as...</span></a></li>
                    <li><a href='#!' id="btn_saveAllCharts"><span>Save all</span></a></li>
                    <li class="divider"></li>
                    <li><a href='#!' id="btn_quitEmulink"><span>Quit</span></a></li>
                    <li class="divider"></li>
                </ul>
            </li>
            <li class='active has-sub'><a href='#!'><span>States</span></a>
				<ul>
                    <li class="divider"></li>
					<li><a href='#!' id="button_state"><span>New state</span></a></li>
					<li><a href='#!' id="changeNameNode"><span>Rename state</span></a></li>
					<li><a href='#!' id="deleteNode"><span>Delete state</span></a></li>
                    <li class="divider"></li>
				</ul>
			</li>
            <li class='active has-sub'><a href='#!'><span>Transitions</span></a>
				<ul>
                    <li class="divider"></li>
					<li><a href='#!' id="button_transition"><span>New transition</span></a></li>
					<li><a href='#!' id="changeNameEdge"><span>Rename transition</span></a></li>
                    <li><a href='#!' id="deleteEdge"><span>Delete transition</span></a></li>
                    <li class="divider"></li>
				</ul>
			</li>
            <li class='active has-sub'><a href='#!'><span>Context</span></a>
				<ul>
                    <li class="divider"></li>
                    <li><a href='#!'><span>New constant</span></a></li>
					<li><a href='#!' id="button_add_field"><span>New variable</span></a></li>
                    <li class="divider"></li>
				</ul>
			</li>
		    <li class='active has-sub'><a href='#!'><span>Zoom</span></a>
				<ul>
                    <li class="divider"></li>
					<li><a href='#!' id ="zoom-in"><span>Zoom-in</span></a></li>
					<li><a href='#!' id ="zoom-out"><span>Zoom-out</span></a></li>
					<li><a href='#!' id ="resetZoom"><span>Reset zoom</span></a></li>
                    <li class="divider"></li>
				</ul>
		    </li>
		    <li class='active has-sub'><a href='#!'><span>Help</span></a>
				<ul>
                    <li class="divider"></li>
					<li><a href='#!'><span>Online help</span></a></li>
					<li><a href='#!'><span>About</span></a></li>
                    <li class="divider"></li>
				</ul>
		    </li>
		</ul>
	</div>
	<div id="stateMachineInfoBar" >
		<ul class="dropdown dropdown-horizontal">
		   <li class='active has-sub'><a href='#!' id="EmuchartsEditorMode"><span>Editor mode: browse diagram</span></a>
		</ul>
	</div>
	<div id="ContainerStateMachine" ></div>
	<div id="state_machine_toolbar" ></div>
		<!-- <textarea id="emulinkInfo" readonly> </textarea> -->
		<textarea id="infoBox" readonly ></textarea>
		<textarea id="infoBoxModifiable" readonly >This space is for the Advanced Diagram Editor (this plugin will be implemented soon!) </textarea>
        <!-- <textarea id="warningDebug" readonly >Debug messages</textarea> -->
	</div>
</div>